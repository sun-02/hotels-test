<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hotelstest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/text_blue</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Hotelstest" parent="Base.Theme.Hotelstest" />

    <style name="TextAppearance.Hotelstest.Price" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/sf_pro_display_semibold_600</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold_600</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextAppearance.Hotelstest.Header" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextAppearance.Hotelstest.Title" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextAppearance.Hotelstest.Property" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_dark_gray</item>
    </style>
    <style name="TextAppearance.Hotelstest.Rank" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/rank_text</item>
    </style>
    <style name="TextAppearance.Hotelstest.Description" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/sf_pro_display_regular_400</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular_400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_90</item>
    </style>
    <style name="TextAppearance.Hotelstest.InputText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/sf_pro_display_regular_400</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular_400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_90</item>
    </style>
    <style name="TextAppearance.Hotelstest.InputTextHint" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/sf_pro_display_regular_400</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular_400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hint_color</item>
    </style>
    <style name="TextAppearance.Hotelstest.priceForIt" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/sf_pro_display_regular_400</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular_400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="TextAppearance.Hotelstest.PropertyDescription" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="TextAppearance.Hotelstest.CustomerInfoRemark" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/sf_pro_display_regular_400</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular_400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="TextAppearance.Hotelstest.Address" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>
    <style name="TextAppearance.Hotelstest.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.MaterialComponents.Chip" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium_500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">15dp</item>
    </style>

    <style name="Widget.Hoteltext.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/fragment_background</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_field_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_field_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_field_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_field_radius</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>
</resources>









